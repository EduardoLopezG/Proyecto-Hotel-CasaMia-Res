<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/idSplashActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.eduardo.hotelcasamia.SplashActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_image_view"
            android:src="@drawable/logoblack"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/splash_text_view"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcomeMessageSplahScreen"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/White"/>

    </LinearLayout>

</RelativeLayout>
