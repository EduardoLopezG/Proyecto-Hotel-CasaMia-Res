<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eduardo.hotelcasamia.InformationHotelFragment"
    android:orientation="horizontal">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_information"
                android:src="@drawable/information_hotel"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/idCardViewOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_information"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                card_view:cardBackgroundColor="#D5DBDB">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/text_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/informationHotel_text_one"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/idTextInformationHotel"
                android:layout_below="@id/idCardViewOne"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/informationHotel_text_two"
                android:textAlignment="center"/>

            <android.support.v7.widget.CardView
                android:id="@+id/idCardViewTwoInformation"
                android:layout_below="@id/idTextInformationHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                card_view:cardBackgroundColor="#610B0B">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texHotelInformationTitelContactUs"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/idTextContactFirst"
                android:layout_below="@id/idCardViewTwoInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/textContactUs"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/idTextContactInformation"
                android:layout_below="@id/idTextContactFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/textPhoneNumberContactUs"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
