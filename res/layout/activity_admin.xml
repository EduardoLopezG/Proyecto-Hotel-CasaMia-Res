<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.eduardo.hotelcasamia.AdminActivity">

    <TextView
        android:id="@+id/title_Welcome_Admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/adminActivityWelcomeMessage"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/admin_Image_Menu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/title_Welcome_Admin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/logowhite" />

    <Button
        android:id="@+id/btn_manage_Reservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/textButtonManageReservations"
        android:textColor="@color/White"
        android:background="@color/blue"/>

    <Button
        android:id="@+id/btn_Admin_Log_Out"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_manage_Reservations"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn_manage_Reservations"
        android:layout_marginBottom="12dp"
        android:text="@string/textLogOutButton"
        android:textColor="@color/White"
        android:background="@color/colorAccent" />

</RelativeLayout>
