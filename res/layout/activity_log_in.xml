<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.example.eduardo.hotelcasamia.LogInActivity">

    <ImageView
        android:id="@+id/image_logo_log_in"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/edt_email"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edt_email"
        android:layout_marginEnd="186dp"
        android:layout_marginRight="186dp"
        android:src="@drawable/logowhite" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:background="#11000000"
        android:textSize="22dp"
        android:hint="@string/textWriteEmailLogIn" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_below="@id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#11000000"
        android:textSize="22dp"
        android:hint="@string/textWritePasswordLogIn"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_registrer"
        android:layout_below="@id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/textButtonResgistredLogIn"
        android:textColor="@color/White"
        android:layout_marginTop="30dp"
        android:background="@color/blue" />

    <Button
        android:id="@+id/btn_log_in"
        android:layout_below="@id/btn_registrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/textButtonLogIn"
        android:textColor="@color/White"
        android:background="@color/green" />

</RelativeLayout>
