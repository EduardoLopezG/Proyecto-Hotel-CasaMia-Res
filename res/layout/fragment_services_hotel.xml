<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eduardo.hotelcasamia.ServicesHotelFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/idTextHotelServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                card_view:cardBackgroundColor="#610B0B">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titleHotelServices"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18dp"/>

            </android.support.v7.widget.CardView>


            <ListView
                android:id="@+id/list_hotel_services"
                android:layout_below="@id/idTextHotelServices"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="308dp"></ListView>

            <android.support.v7.widget.CardView
                android:id="@+id/idTextReceptionServices"
                android:layout_below="@id/list_hotel_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                card_view:cardBackgroundColor="#610B0B">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titleReceptionServices"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18dp"/>

            </android.support.v7.widget.CardView>

            <ListView
                android:id="@+id/list_reception_services"
                android:layout_below="@id/idTextReceptionServices"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"></ListView>

            <android.support.v7.widget.CardView
                android:id="@+id/idTextExternalServices"
                android:layout_below="@id/list_reception_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                card_view:cardBackgroundColor="#610B0B">

                <TextView
                    android:layout_below="@id/list_hotel_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titleCloseServices"
                    android:textColor="@color/White"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"/>

            </android.support.v7.widget.CardView>

            <ListView
                android:id="@+id/list_external_services"
                android:layout_below="@id/idTextExternalServices"
                android:layout_width="match_parent"
                android:layout_height="308dp"
                android:layout_marginTop="10dp"></ListView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
